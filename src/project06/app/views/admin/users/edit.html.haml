- form_for([:admin, @user], :html => { :multipart => true }) do |f|
  = f.error_messages
  %p 
    = f.label :username, "User name" 
    %br
  - if admin?
    = f.text_field :username
  - else
    = f.text_field :username, :disabled => :disabled
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  %p 
    = f.label(:fname, "First Name") 
    %br
    = f.text_field :fname
  %p
    = f.label(:lname, "Last Name")
    %br
    = f.text_field :lname
  %p 
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :photo
    %br 
    = f.file_field :photo
    %img.authorImg{:src => @user.photo.url }    
  - if admin?
    %p
      = f.label :role_id
      %br
      = f.collection_select(:role_id, Admin::RolesController.get_roles, :id, :name)
  %p
    = f.submit


