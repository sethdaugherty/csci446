.header
	%h1 Articl.es
	%p.tagline ...my cousin works for Bit.ly

= link_to 'Back', :back, :title => "Back" 

- form_for(@article) do |f| 
	%h2= "Editing #{@article.title}"

	= f.error_messages

	%p
		= f.label :title 
		%br 
		= f.text_field :title 
	%p
		= f.label :author_id 
		%br
		= f.collection_select(:author_id, ArticlesController.get_authors, :id, :name)
	%p
		= f.label :body 
		%br 
		= f.text_area :body 
	%p= f.submit 'Update'
